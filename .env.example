# Update Server Configuration
UPDATE_ENABLED=true
# Production server
UPDATE_SERVER_URL=http://23.95.193.155:3000/api/updates
# Development server (uncomment for local testing)
# UPDATE_SERVER_URL=http://localhost:3000/api/updates
UPDATE_CHANNEL=stable

# Update check interval in milliseconds
# 120000 = 2 minutes (for testing)
# 21600000 = 6 hours (recommended for production)
UPDATE_CHECK_INTERVAL=120000

UPDATE_AUTO_DOWNLOAD=true
UPDATE_AUTO_INSTALL=true

# macOS Code Signing & Notarization
# Get these from https://appleid.apple.com
APPLE_ID=your-apple-id@example.com
APPLE_APP_SPECIFIC_PASSWORD=xxxx-xxxx-xxxx-xxxx
APPLE_TEAM_ID=YOUR_TEAM_ID

# Windows Code Signing
# Optional: For signing Windows installers
WIN_CSC_LINK=path/to/certificate.pfx
WIN_CSC_KEY_PASSWORD=your-certificate-password

# Development
NODE_ENV=development
DEBUG=employee-monitor:*
