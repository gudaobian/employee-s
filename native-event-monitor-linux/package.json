{
  "name": "native-event-monitor-linux",
  "version": "1.0.0",
  "description": "Linux native keyboard and mouse event monitor using libinput/X11 XRecord APIs",
  "main": "index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "install": "node-gyp rebuild",
    "build": "node-gyp rebuild && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc",
    "clean": "node-gyp clean && rm -rf lib/*.js lib/*.d.ts",
    "test": "node test/basic.test.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "gypfile": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "keywords": [
    "linux",
    "event-monitor",
    "keyboard",
    "mouse",
    "libinput",
    "x11",
    "native",
    "addon"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/employee-monitoring/employee-client.git",
    "directory": "native-event-monitor-linux"
  }
}
